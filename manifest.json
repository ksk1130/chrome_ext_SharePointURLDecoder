{
  "name": "SharePoint URL Decoder",
  "description": "SharePointの日本語URLをデコードするChrome拡張機能。アプリで読み取り専用で開くオプションも提供。",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "version": "0.9.0",
  "manifest_version": 3,
  "action": {
    "default_title": "SharePoint URL Decoder",
    "default_popup": "popup.html"
  },
  "permissions": ["clipboardWrite"],
  "host_permissions": ["https://*.sharepoint.com/*"]
}
